acl slaves {
	10.0.0.72;	//github
	10.0.1.111;	//webserver
};

# This is the zone definition. replace example.com with your domain name
zone "altidev.com" {
        type master;
        allow-query { any; };
	allow-transfer { slaves; };
        file "/etc/bind/zones/altidev.com.db";
        };

# This is zone definition for ascorp.com.
zone "ascorp.com" {
	type master;
	allow-query { any; }; 
	allow-transfer { slaves; };
	file "/etc/bind/zones/ascorp.com.db";
	};

# This is the zone definition for reverse DNS. replace 0.168.192 with your network address in reverse notation - e.g my network address is 192.168.0
zone "0.0.10.in-addr.arpa" {
     type master;
     allow-query { any; };
     allow-transfer { slaves; };
     file "/etc/bind/zones/rev.0.0.10.in-addr.arpa";
};

zone "1.0.10.in-addr.arpa" {
     type master;
     allow-query { any; };
     allow-transfer { slaves; };
     file "/etc/bind/zones/rev.1.0.10.in-addr.arpa";
};

zone "2.0.10.in-addr.arpa" {
     type master;
     allow-query { any; };
     allow-transfer { slaves; };
     file "/etc/bind/zones/rev.2.0.10.in-addr.arpa";
};

include "/etc/bind/rndc.key";

