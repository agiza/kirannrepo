#!/bin/bash

# nexus Linux service controller script
cd "/storage/nexus/bin"
export RUN_AS_USER=root
case "$1" in
    start)
        ./nexus start
        ;;
    stop)
        ./nexus stop
        ;;
    status)
        ./nexus status
        ;;
    restart)
        ./nexus restart
        ;;
    *)
        echo "Usage: $0 {start|stop|status|restart}"
        exit 1
        ;;
esac

