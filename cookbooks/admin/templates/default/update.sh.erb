#!/bin/bash
echo "Upgrading VPN Server."
sudo apt-get -y update
sudo apt-get -y upgrade
rhel_host=`cat ~/bin/rhel_host`
for i in $rhel_host; do
        echo "Upgrading $i...."; ssh -q -o StrictHostKeyChecking=no root@$i "yum -y update --exclude=real*\ int*"; echo "Finished $i...."
done
ubuntu_host=`cat ~/bin/ubuntu_host`
for h in $ubuntu_host; do
        echo "Upgrading $h...."; ssh -q -o StrictHostKeyChecking=no $h "sudo apt-get -y update; sudo apt-get -y upgrade"; echo "Finished with $h"
done

