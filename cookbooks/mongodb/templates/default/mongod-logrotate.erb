# Logrotate file for mongod

/var/log/mongo/mongod.log
/var/log/mongo/mongod-replica.log
/var/log/mongo/mongod-replica1.log
/var/log/mongo/mongod-config.log {
    compress
    delaycompress
    notifempty
    daily
    rotate 5
    create 0644 mongod mongod
    postrotate
       /usr/bin/killall -SIGUSR1 mongod
    endscript
}

