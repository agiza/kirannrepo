#!/bin/bash
if [ -f /data/db/replicacreated]; then
  echo "replica already created."
elif [ ! -f /data/db/rsadd.js ]; then
  echo "No rsadd.js file to access"; exit 1
else
  mongo localhost:27017 --quiet /data/db/rsadd.js && touch /data/db/replicacreated; exit 0 || echo "Error running the replicate create script."; exit 1

fi

