#!/bin/bash
db_names="<%= @mongodb_names %>"
for i in `echo $db_names`; do
	echo "Populating $i database"
     	/usr/bin/mongo localhost:27017/$i --quiet /etc/mongo/seedData.js; /usr/bin/mongo localhost:27017/$i --quiet /etc/mongo/addrData.addIndexes.js; /usr/bin/mongo localhost:27017/$i --quiet /etc/mongo/demoData.js;
     	echo "Database $i populated."
done
