#!/bin/bash
db_names="<%= @mongodb_names %>"
for i in `echo $db_names`; do
        db_check=`ls -ltra /data/db/$i.ns`
        if [ "$db_check" == "" ]; then
	echo "Populating $i database"
     	/usr/bin/mongo localhost:27017/$i --quiet /etc/mongo/seedData.js; /usr/bin/mongo localhost:27017/$i --quiet /etc/mongo/addIndexes.js; /usr/bin/mongo localhost:27017/$i --quiet /etc/mongo/demoData.js;
     	echo "Database $i populated."
        else
                echo "Database is already created."
        fi
done
