db.dialect=org.hibernate.dialect.MySQL5InnoDBDialect
db.driver=com.mysql.jdbc.Driver
db.url=jdbc:mysql://<%= node[:db_server] %>:<%= node[:db_port] %>/<%= node[:rt_dbname] %>?autoReconnect=true
db.name=<%= node[:rt_dbname] %>
db.username=<%= node[:db_user] %>
db.password=<%= node[:db_pass] %>
