db.maxActive=<%= node[:db_maxactive] %>
db.maxIdle=<%= node[:db_maxidle] %>
db.maxWait=<%= node[:db_maxwait] %>
db.removeAbandoned=true
db.removeAbandonedTimeout=600
db.timeBetweenEvictionRunsMillis=<%= node[:db_timeevict] %>
