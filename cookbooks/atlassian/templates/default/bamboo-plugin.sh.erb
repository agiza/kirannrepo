#!/bin/bash
cd /tmp
plugins="hung-build-killer-2.1.4.jar"

for i in `echo $plugins`; do
if [ ! -f /tmp/$i ]; then
  wget http://<%= node[:yumrepo_host] %>/yum/common/$i
fi

if [ ! -f /opt/atlassian/bamboo/webapp/WEB-INF/lib/$i ]; then
  mv /tmp/$i /opt/atlassian/bamboo/webapp/WEB-INF/lib/$i 
  chown bamboo.bamboo /opt/atlassian/bamboo/webapp/WEB-INF/lib/$i
fi
done

