################################################################################
## Rules Management properties
################################################################################

#mongo properties
mongo.database = <%= node[:rf_rm_mongo_database] %>
mongo.replicaset = <%= node[:rf_rm_mongo_replicaset] %>

service.provider.logout.success.url=https://<%= node[:rm_webproxy_host] %>/Shibboleth.sso/Logout
service.provider.context=rsng-rules-mgmt-rest
spring.security.role=IS_AUTHENTICATED_ANONYMOUSLY
iam.authz.token.url=http://<%= node[:rf_idp_servername] %>:8080/iamsvc/authz/token

#rabbit properties for Rules Management
rabbit.host = <%= node[:rf_indexing_host] %>
rabbit.port = <%= node[:rf_indexing_host_port] %>
rabbit.username  = <%= node[:rf_indexing_host_username] %>
rabbit.password = <%= node[:rf_indexing_host_password] %>
rabbit.virtualHost = <%= node[:rf_indexing_host_virtualHost] %>
