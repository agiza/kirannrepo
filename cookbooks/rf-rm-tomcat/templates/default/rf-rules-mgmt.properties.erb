################################################################################
## Rules Management properties
################################################################################

#mongo properties
mongo.database = <%= node[:rf][:rm][:mongo][:database] %>
mongo.replicaset = <%= node[:rf][:rm][:mongo][:replicaset] %>

service.provider.logout.success.url=https://<%= node[:rf][:rm][:shibboleth][:host] %>/Shibboleth.sso/Logout
service.provider.context=rsng-rules-mgmt-rest
spring.security.role=IS_AUTHENTICATED_ANONYMOUSLY
iam.authz.token.url=http://<%= node[:rf][:rm][:iam][:host] %>/iamsvc/authz/token

#rabbit properties for Rules Management
rabbit.host = <%= node[:rf][:rm][:rabbit][:host] %>
rabbit.port = <%= node[:rf][:rm][:rabbit][:port] %>
rabbit.username  = <%= node[:rf][:rm][:rabbit][:username] %>
rabbit.password = <%= node[:rf][:rm][:rabbit][:password] %>
rabbit.virtualHost = <%= node[:rf][:rm][:rabbit][:virtualHost] %>
