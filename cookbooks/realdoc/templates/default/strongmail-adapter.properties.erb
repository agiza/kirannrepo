# adapter settings
rd.adapter.scan.freq=15000

# mongo
rd.adapter.mongo.host=<%= node[:mongodb_server] %>
rd.adapter.mongo.server=<%= node[:mongodb_server] %>
rd.adapter.mongo.database=<%= node[:mongodb_database] %>
rd.adapter.mongo.db=<%= node[:mongodb_database] %>

# rabbit
rd.adapter.amqp.host=<%= node[:amqp_host] %>
rd.adapter.amqp.port=<%= node[:amqp_port] %>
rd.adapter.amqp.vhost=/<%= node[:rd_amqp_vhost] %>
rd.adapter.amqp.username=<%= node[:rd_amqp_user] %>
rd.adapter.amqp.password=<%= node[:rd_amqp_pass] %>
rd.adapter.amqp.recon.inbound=rd.correspondence.recon
rd.adapter.amqp.requests=rd.correspondence.recon
rd.adapter.amqp.generate=rd.correspondence.generate
rd.adapter.amqp.delivery=rd.correspondence.delivery

# strongmail db
rd.adapter.db.sm.driver=com.mysql.jdbc.Driver
rd.adapter.db.sm.url=jdbc:mysql://<%= node[:smadap_dbhost] %>:<%= node[:db_port] %>/<%= node[:smadap_dbname] %>
rd.adapter.db.sm.username=<%= node[:smadapdb_user] %>
rd.adapter.db.sm.password=<%= node[:smadapdb_pass] %>

