-------------------------------------- 
# adapter settings
rd.adapter.scan.freq=15000

# mongo
rd.adapter.mongo.host=<%= @mongo[:host] %>
rd.adapter.mongo.server=<%= @mongo[:host] %>
rd.adapter.mongo.database=<%= @mongo[:dbname] %>
rd.adapter.mongo.db=<%= @mongo[:dbname] %>

# rabbit
rd.adapter.amqp.host=<%= @amqp[:host] %>
rd.adapter.amqp.port=<%= @amqp[:port] %>
rd.adapter.amqp.vhost=<%= @amqp[:vhost] %>
rd.adapter.amqp.username=<%= @amqp[:username] %>
rd.adapter.amqp.password=<%= @amqp[:password] %>
rd.adapter.amqp.recon.inbound=rd.correspondence.recon
rd.adapter.amqp.requests=rd.correspondence.recon
rd.adapter.amqp.generate=rd.correspondence.generate
rd.adapter.amqp.delivery=rd.correspondence.delivery

# database properties
rd.adapter.sm.jndi=jdbc/strongmail
rd.adapter.sm.aggregateLogQuery=<%= @aggregate_query %>
rd.adapter.sm.successLogQuery=<%= @success_query %>

