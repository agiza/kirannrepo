# adapter settings
rd.adapter.recon.write.cron=*/15 * * * * MON-FRI

# rabbit
rd.adapter.amqp.host=<%= @amqphost %>
rd.adapter.amqp.port=<%= @amqpport %>
rd.adapter.amqp.vhost=<%= node[:realdoc_amqp_vhost] %>
rd.adapter.amqp.username=<%= @amqpuser %>
rd.adapter.amqp.password=<%= @amqppass %>
rd.adapter.amqp.queue=<%= @amqp[:queue_name] %>


# file output settings
rd.adapter.doneSuffix=<%= @output[:done_file_suffix] %>
rd.adapter.output.text.directory=<%= @output[:directory] %>
rd.adapter.output.suppression.filename=<%= @output[:suppression_filename] %>
rd.adapter.output.text.filename=<%= @output[:text_filename] %>
rd.adapter.output.blacklist.filename=<%= @output[:blacklist_filename] %>

#in webapp
rd.adapter.ftp.host=<%= @ftp[:host] %>
rd.adapter.ftp.port=<%= @ftp[:port] %>
rd.adapter.ftp.username=<%= @ftp[:username] %>
rd.adapter.ftp.privateKey=file:<%= @ftp[:key_file] %>
rd.adapter.output.ftp.directory=<%= @ftp[:output_dir] %>
rd.adapter.output.use.ftp=<%= @ftp[:use] %>

rd.adapter.mongo.host=<%= @mongo_host %>
rd.adapter.mongo.db=<%= node[:mongodb_database] %>
rd.adapter.mongo.slaveOk=false

# deprecated properties
rd.adapter.output.ReconPollingInterval=15000


