-------------------------------------- 
# adapter settings
rd.adapter.recon.write.cron=* * * * *

# rabbit
rd.adapter.amqp.host=<%= node[:amqp_host] %>
rd.adapter.amqp.port=<%= node[:amqp_port] %>
rd.adapter.amqp.vhost=/<%= node[:rd_amqp_vhost] %>
rd.adapter.amqp.username=<%= node[:rd_amqp_user] %>
rd.adapter.amqp.password=<%= node[:rd_amqp_pass] %>
rd.adapter.amqp.legacy=rd.legacy.adapter

# file output settings
rd.adapter.output.text.directory=target
rd.adapter.output.text.filename=realdoc-reconfile.txt
rd.adapter.output.blacklist.filename=realdoc-blacklist.txt

#ftp settings
rd.adapter.ftp.host=<%= node[:rd_ftphost] %>
rd.adapter.ftp.port=<%= node[:rd_ftpport] %>
rd.adapter.ftp.username=<%= node[:rd_ftpuser] %>
rd.adapter.ftp.password=<%= node[:rd_ftppass] %>
rd.adapter.ftp.privateKey=file:conf/realdoc.key
