<?xml version='1.0' encoding='utf-8'?>
<Context>
  <Resource name="<%= @jndi_name %>"
            auth="Container"
            type="javax.sql.DataSource"
            driverClassName="oracle.jdbc.driver.OracleDriver"
            url="jdbc:oracle:thin:@<%= node[:oradb_server] %>:<%= node[:oradb_port] %>/<%= node[:rdoc_dbname] %>"
            username="<%= node[:rdoc_username] %>"
            password="<%= node[:rdoc_password] %>"
            maxActive="<%= node[:db_maxactive] %>"
            minIdle="0"
            maxIdle="<%= node[:db_maxidle] %>"
            maxWait="<%= node[:db_maxwait] %>"
            timeBetweenEvictionRunsMillis="<%= node[:db_timeevict] %>"
            removeAbandoned="true"
            removeAbandonedTimeout="600"
            validationQuery="<%= node[:validation_query] %>"
            validationQueryTimeout="<%= node[:db_valquerytimeout] %>"
            testOnBorrow="true"
            testWhileIdle="false"
            initialSize="<%= node[:db_initsize] %>"
            />
</Context>
