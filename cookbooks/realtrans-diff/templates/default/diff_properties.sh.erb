#!/bin/bash
apps="realtrans-central realtrans-rp realtrans-fp int-corelogic int-datavision int-etrac int-interthinx int-rs int-rres"
for i in `echo "$apps"`; do
	cd /home/ubuntu/work
	sudo diff -i /opt/tomcat/conf/$i.properties /home/ubuntu/config/$i.config > /home/ubuntu/work/$i.diff
	sudo chown -R ubuntu.ubuntu /home/ubuntu
done

appsds="realtrans-central realtrans-rp realtransfp"
for h in `echo "$appsds"`; do
	cd /home/ubuntu/work
	sudo diff -i /opt/tomcat/conf/Catalina/localhost/$h.xml /home/ubuntu/config/$h.xml > /home/ubuntu/work/$h.diff
	sudo chown -R ubuntu.ubuntu/home/ubuntu
done


