#!/bin/bash
echo -e "Creating IAM Index and Mapping"

index_date=$(date +"%Y-%m-%d")
newIndex=audit_user_management_$index_date

curl -XPUT 'http://127.0.0.1:9200/'$newIndex'/' -d '
{
    "settings": {
        "index": {
            "number_of_shards": 5,
            "number_of_replicas": 1
        },
        "analysis": {
            "analyzer": {
                "default": {
                    "type": "keyword"
                }
            }
        }
    },
    "mappings": {
        "iam": {
            "_all": {
                "enabled": false
            },
            "properties": {
                "uid": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "request": {
                    "properties": {
                        "receivedTimeStamp": {
                            "type": "date"
                        },
                        "requestType": {
                            "type": "string"
                        },
                        "requestParameters": {
                            "type": "object"
                        },
                        "urlParameters": {
                            "type": "object"
                        },
                        "requestBody": {
                            "type": "object"
                        },
                        "requestPath": {
                            "type": "object",
                            "properties": {
                                "requestUrl": {
                                    "type": "string"
                                },
                                "user": {
                                    "type": "nested"
                                },
                                "group": {
                                    "type": "nested"
                                },
                                "role": {
                                    "type": "nested"
                                },
                                "product": {
                                    "type": "nested"
                                },
                                "resource": {
                                    "type": "nested"
                                }
                            }
                        }
                    }
                },
                "response": {
                    "properties": {
                        "sentTimeStamp": {
                            "type": "date"
                        },
                        "responseStatus": {
                            "type": "string"
                        },
                        "responseBody": {
                            "type": "object"
                        }
                    }
                },
                "host": {
                    "type": "object"
                }
            }
        },
        "sso": {
            "_all": {
                "enabled": false
            }
        }
    }
}'


echo -e
sleep 5

#Creating and Switching alias
echo -e "Creating and Switching alias"
curl -XPOST 'http://127.0.0.1:9200/_aliases' -d '
{
    "actions": [
        { "add": {
            "alias": "audit_user_management",
            "index": "'$newIndex'"
        }},
        { "add" : {
            "alias" : "feed_audit_user_management" ,
            "index" : "'$newIndex'"

        } }
    ]
}'
echo -e
sleep 5

echo -e "Please verify that the new index was created successfully and alias points to this new index."
