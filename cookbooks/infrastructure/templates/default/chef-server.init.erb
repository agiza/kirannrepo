#!/bin/bash
#
# chef-server          Start up the Opscode Chef server daemon
#
# chkconfig: 2345 55 25
# description: Opscode Chef Server is an automated Configuration \
#              Management system.
#
# processname: /opt/chef-server/*
# pidfile: /var/run/chef

### BEGIN INIT INFO
# Provides: chef-server
# Required-Start: $local_fs $network $syslog
# Required-Stop: $local_fs $syslog
# Should-Start: $syslog
# Should-Stop: $network $syslog
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: Start up the Opscode Chef server daemon
# Description:       Chef Server is a config management system.
### END INIT INFO

case "$1" in
    start)
        chef-server-ctl start
        ;;
    stop)
        chef-server-ctl stop
        ;;
    restart)
	$0 stop
	$0 start
	;;
    status)
        chef-server-ctl status
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

