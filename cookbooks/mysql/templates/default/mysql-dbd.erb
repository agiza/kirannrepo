#!/bin/bash
dbd_app="<%= @dbdapp %>"
wget http://<%= @yumserver %>yum/common/$dbd_app.tar.gz -O /tmp/$dbd_app.tar.gz
if [ -f /tmp/$dbd_app.tar.gz ]; then
   echo "Error retrieving the $dbd_app.tar.gz file from the yum server."; exit 1
fi
cd /tmp
tar -xzf $dbd_app.tar.gz
cd $dbd_app
perl Makefile.PL
make
make install

cd /tmp
rm -rf $dbd_app
rm -f $dbd_app.tar.gz

